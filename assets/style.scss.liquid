
/*------- Colors --------*/
$col-grey: #ccc;
$col-black: #000;
$col-turq: #8ee2ec;
$col-lightgrey: #ebebeb;
$col-beige: #fddea7;
$col-white: #fff;
$col-orange: #febf4e;

$col-body: #333;
$col-links-primary: #44C9B8;
$col-links-secondary: #33B5A4;

/* Baseline */
$baseline: 20px;

/*------- Breakpoints --------*/
@mixin breakpoint($class) {
  @if $class == small { @media (min-width: 460px) { @content; } }
  @else if $class == medium { @media (min-width: 767px) { @content; } }
  @else if $class == large { @media (min-width: 1200px) { @content; } }
}


/*------- Mixins --------*/
@mixin transition($transition: all .2s ease-in-out) {
  $prefixes:  ("-webkit-", "-ms-", "-o-",  "");
  @each $prefix in $prefixes {
   #{$prefix}transition: $transition;
  }
}
// Font size
$browser-context: 16; // Default
@function em($pixels, $context: $browser-context) {
  @return #{$pixels/$context}em
}

/*------- Necessary Styles --------*/
*, *:before, *:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.block {display: block;}
.cf {
  zoom: 1;
  &:after {
    content: "";
      display: table;
      clear: both;
  }
}
.browsehappy {
  width: 100%;
  background: red;
  padding: 15px;
    color: red;
}

/*------- Main Setup --------*/
::selection { }
html, body { height: 100%;}
html { font-size: 100%;}
body {
  color: $col-body;
  line-height: 1.6;
}
body, input, textarea, select, button {
  font-family: 'Arial', 'Verdana', sans-serif;
  font-size: em(14);
}
.wrapper {
  width: 100%;
  padding: 0 20px;
  max-width: 980px;
  margin: 0 auto;
}


/*------- Common Helpers --------*/
.hide, .hidden { display: none;}
.padding {padding: 20px;}
.text-left {text-align: left;}
.text-center {text-align:center;}
.text-right {text-align: left;
@include breakpoint(small) {
  text-align: right;
  }}
.middle {line-height: 48px;}
.pull-left {float: left;}
.pull-right {float: right;}
.mtb {margin: 50px 0;}
.mbs {margin-bottom: $baseline/2}
.mb {margin-bottom: $baseline;}
.mbb {margin-bottom: $baseline*3}
.mt {margin-top: $baseline;}
.mtt {margin-top: $baseline*2;}
.uppercase {text-transform:uppercase;}
.center {
    position: absolute;
    left: 50%;
    top: 50%;
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
.two-cols {
  @include breakpoint(medium) {
    -moz-column-count: 2;
    -moz-column-gap: 3%;
    -webkit-column-count: 2;
    -webkit-column-gap: 3%;
  }
}
.img-full {
  width: 100%;
  height: auto;
}

/*------- Typography --------*/
h1 {
  font-size: em(34);
}

h2 {
    font-size: em(28);
}
h3 {
  font-size: em(22);
}

h4 {
  font-size: em(18);
}
h5, h6 {
  font-size: em(16);
}
span, strong, p, a, em {
  font-size: em(14);
}
small {
  font-size: em(12);
  padding: 0 135px;
  display: block;
}
p { padding-bottom: $baseline/2; }
strong { font-weight: bold; }
em { font-style: italic; }


/*------- Links --------*/
a {
    text-decoration: none;
    color: $col-links-primary;
    @include transition;
    &:hover { color: $col-links-secondary;}
    &.underline {text-decoration: underline;}
}


/*------- Lists --------*/
ul { list-style: none;}
ul li { display: block;}
nav ul li { display: inline-block; }

/*------- Forms --------*/
input {
  text-decoration: none;
  @include transition;
  &:focus {outline: none;}
  &:not([type=submit]) {
    width: 100%;
    max-width: 200px;
    border: 1px solid $col-grey;
    color: $col-black;
    padding: 7px;
    font-size: em(16);
  }
  &[type="submit"] {
    border: 1px solid $col-grey;
    background: $col-grey;
    color: $col-white;
    width: 143px;
    padding: 7px;
    display: block;
    font-size: em(16);
    &:hover { background: $col-links-primary; border: 1px solid $col-links-primary; cursor: pointer;}
        &.add-to-cart {
          text-transform: uppercase;
          width: 100%;
          max-width: 100%;
          margin: $baseline 0;
          background: $col-orange;
          border: 1px solid $col-orange;
        }
        &.mailchimp {
          margin-left: $baseline/2;
        }
  }
}
textarea {
  @extend input;
  resize: none;
  height: 240px;
}

.inline-form {
  .text, .submit {display: block;}
  .text {width: 100%;}
  .submit {width: 60%; input {margin-left: 0}}
  @include breakpoint(medium) {
    .text, .submit {float: left;}
    .text {width: 70%;}
    .submit {width: 30%;}
  }
}

/* PAGINATION */
.pagination {
    float: right;
    text-transform: uppercase;
    li {
      display: inline-block;
      &.prev:after,
      &.next:before {
        content: '|';
        padding: 0  $baseline/2;
      }
      &.spacing {
        padding: 0 10px;
      }
      &.active {
        color: $col-grey;
      }
    }
}

/* BREADCRUMBS */
.breadcrumbs {
  text-transform:uppercase;
  a {
      &:after {
        content: '|';
            padding: 0  $baseline/2;
      }
      &:last-child:after {
        content: '';
      }
    }

}


/* SLIDER */
.flex-direction-nav a.flex-prev  { background-image:url({{ 'leftarrow.png' | asset_url }}); display: block; text-indent: -999999px}
.flex-direction-nav a.flex-next  { background-image:url({{ 'rightarrow.png' | asset_url }}); display:block; text-indent: 999999px}

/* HEADER */
header.global-header {
  position: relative;
  .site-logo {
    display: block;
    margin: $baseline*1.5 20px;
    max-width: 180px;
    @include breakpoint(medium) {
      margin: $baseline*1.5 auto;
      max-width: 220px;
    }
  }
  .header-left {
    display: block;
    margin: 0 auto;
    width: 150px;
    text-transform: uppercase;
    text-align: center;
    @include breakpoint(medium) {
      position: absolute;
      top: 15px;
      left: 46px;
      text-align: left;
    }

    li {list-style:none}
    span {
      display: block;
    }
  }
  .header-right {
    display: block;
    margin: 0 auto 20px auto;
    width: 160px;
    text-transform: uppercase;
    @include breakpoint(medium) {
      position: absolute;
        top: -6px;
        right: 46px;
    }

    li {list-style:none}
    span {
      display: block;
    }
  }
  nav {
    width: 100%;
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .8);
    table-layout: fixed;
    border-top: 1px solid $col-grey;
    border-bottom: 1px solid $col-grey;
    @include breakpoint(medium) {
      display: table;
      position: static;
      background: none;
    }
    .nav {
      padding: $baseline/2;
      @include breakpoint(medium) {
        display: table-row;
      }
        li {
          display: block;
          @include breakpoint(medium) {
            border-right: 1px solid $col-grey;
            display: table-cell;
            text-align: center;
            &:last-child {
              border-right: none;
            }
          }
          &.active a {
            color: $col-links-primary;
          }
          a {
            text-transform: uppercase;
            padding: $baseline/2 0;
            display: block;
            color: $col-white;
            @include breakpoint(medium) {
              color: $col-body;
            }
            &:hover {color: $col-links-primary;}
          }
       }
    }
  }
}


/* CURRENCIES */
#currencies {
  position: relative;
  .currency-header {
    color: $col-orange;
    text-transform: uppercase;
  }
  .currencies-hide {
    display: block;
    background: $col-white;
    padding: 6px;
    z-index: 999999;
    span:hover {
      cursor: pointer;
    }
    @include breakpoint(medium) {
      display: none;
      position: absolute;
    }
  }
  &:hover .currencies-hide {
    display: block;
  }
  .currency-select {
    &.active {
      color: $col-orange;
    }
  }
}



